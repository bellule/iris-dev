<h1 align=center>Liste des societes</h1>

<table width=80%, align=center, border=0,	cellspacing=0> 
  <tr>
    <th>Nom</th>
    <th>Ville</th>
	<th>Code postal</th>
	<th>Téléphone</th>
	<th>Fax</th>
  </tr>

<% @societes.each do |societe| %>
  <tr class="<%= cycle("even","odd")%>">
  	<td><%=link_to societe.nom, edit_societe_path(societe) %></td>
    <td><%=h societe.ville %></td>
	<td><%=h societe.code_postal %></td>
	<td><%=h societe.telephone %></td>
	<td><%=h societe.fax %></td>
    <td><%= link_to  image_tag("b_drop.png"), societe, :confirm => 'Are you sure?', :method => :delete %></td>
	</td>
	</tr>
<% end %>
</table>
<%= will_paginate @societes %> 
<%= link_to "Ajout d'une societe", new_societe_path %>
